doctype html
html(class='no-js', lang='fr')
  head
    meta(charset='utf-8')
    meta(http-equiv='Content-type', content='text/html')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/stylesheets/foundation.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/compiled.min.css')
    link(rel='stylesheet', href='/stylesheets/perso.css')
    link(rel='stylesheet', href='/stylesheets/font-awesome.css')
    link(rel='stylesheet', href='/stylesheets/examples.css')
    title PouletMoney - Acceuil


  body
    block navbar
      .top-bar
        .top-bar-left
          ul.menu
            li.menu-text Poulet Money
            li
              a(href='#') Nos Offres
            li
              a(href='#') Les Demandes
            li
              a(href='#modalContactForm', data-toggle='modal') Contactez Nous
        .top-bar-right
          if admin
            ul.menu
              li
                a(href='#', data-toggle='modal') #{admin.local.nom}
              li
                a(href='users/logout') Deconnexion
          else
            ul.menu
              li
                a(href='#connexion', data-toggle='modal') Connexion
              li
                a(href='#inscription', data-toggle='modal') Inscription

    block content


    footer.page-footer.center-on-small-only.blue-grey.lighten-5.pt-0
      .container-fluid.blue-gradient
        .row.py-4.d-flex.align-items-center
          .col-md-5.col-12.text-left.mb-4.mb-md-0
            h6.mb-0.white-text.text-center.text-md-left Retrouver Nous Sur les Reseaux Sociaux
          .col-12.col-md-7.text-center.text-md-right
            a.icons-sm.fb-ic.ml-0
              i.fa.fa-facebook.white-text.mr-lg-4
            a.icons-sm.fb-ic.ml-0
              i.fa.fa-facebook.white-text.mr-lg-4
            a.icons-sm.fb-ic.ml-0
              i.fa.fa-facebook.white-text.mr-lg-4
            a.icons-sm.fb-ic.ml-0
              i.fa.fa-facebook.white-text.mr-lg-4
            a.icons-sm.fb-ic.ml-0
              i.fa.fa-facebook.white-text.mr-lg-4

      .container.mt-5.mb-4.text-center.text-md-left
        .row.mt-3
          .col-md-3.col-lg-4.col-xl-3.mb-r.dark-grey-text
            h6.title.font-bold
              strong Poulet Money
            hr.teal.accent-3.mb-4.mt-0.d-inline-block.mx-auto(style={width:'60px'})
            p Description de Poulet Money
          .col-md-2.col-lg-2.col-xl-2.mx-auto.mb-r.dark-grey-text
            h6.title.font-bold
              strong Nos Services
            hr.teal.accent-3.mb-4.mt-0.d-inline-block.mx-auto(style={width:'60px'})
            p.dark-grey-text Vente de Poulet
            p.dark-grey-text Realisation de Prestation
          .col-md-2.col-lg-2.col-xl-2.mx-auto.mb-r.dark-grey-text
            h6.title.font-bold
              strong Navigation
            hr.teal.accent-3.mb-4.mt-0.d-inline-block.mx-auto(style={width: '60px'})
            p.dark-grey-text Nos Offres
            p.dark-grey-text Les Demandes
            p.dark-grey-text Nos Prestations
          .col-md-2.col-lg-2.col-xl-2.mx-auto.mb-r.dark-grey-text
            h6.title.font-bold
              strong Navigation
            hr.teal.accent-3.mb-4.mt-0.d-inline-block.mx-auto(style={width: '60px'})
            p.dark-grey-text Nos Offres
            p.dark-grey-text Les Demandes
            p.dark-grey-text Nos Prestations
            p.dark-grey-text Connexion
            p.dark-grey-text Inscription
      .footer-copyright
        .container-fluid
          | Â© 2018 Copyright
          strong
            a(href='#') PouletMoney

    .modal.fade(id='modalContactForm', tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
      .modal-dialog.cascading-modal(role='document')
        .modal-content
          .modal-header.blue-gradient.darken-3.white-text
            h4.title
              i.fa.fa-pencil Contactez Nous
            button(type='button', data-dismiss='modal', aria-label='close').close.waves-effect.waves-light
              span(aria-hidden='true') &times;
          .modal-body.mb-0
            .md-form.form-sm
              i.fa.prefix.fa-user-circle
              input(type='text', id='form19').form-control
              label(for='form19') Nom
            .md-form.form-sm
              i.fa.fa-envelope.prefix
              input(type='email', id='form20').form-control
              label(for='form20') Email
            .md-form.form-sm
              i.fa.fa-tag.prefix
              input(type='text', id='form21').form-control
              label(for='form21') Sujet
            .md-form.form-sm
              i.fa.fa-tag.prefix
              textarea(type='text', id='form8').md-textarea.mb-0
              label(for='form8') votre message
            .text-center.mt-1-half
              button.btn.btn-info.mb-2
                | Send
                i.fa.fa-send.ml-1

    .modal.fade(id='connexion', tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
      .modal-dialog.cascading-modal(role='document')
        form.modal-content(action='/users/login', method='post')
          .modal-header.blue-gradient.darken-3.white-text
            h4.title
              | Connexion
              button(type='button', data-dismiss='modal', aria-label='Close').close.waves-effect.waves-light
                span(aria-hidden='true') &times;
          .modal-body.form-elegant
            .switch.d-flex.justify-content-center.blue-text
              label
                | Administrateur
                input(type='checkbox', name='type_personne', id='type_personne', checked='false')
                span.lever
                | Client

            .md-form
              input(type='text', id='email', name='email').form-control
              label(for='email') Email
            .md-form.pb-3
              input(type='password', id='password', name='password').form-control
              label(for='password') Mot De Passe
            .text-center.mb-3
              input(type='hidden', id='typeSelect', name='typeSelect')
              button(type='submit', onclick='setType();').btn.blue-gradient.btn-block.btn-rounded.z-depth-1a Connexion
            p.font-small.dark-grey-text.text-right.d-flex.justify-content-center.mb-3.pt-2 or Connectez Vous Avec
            .row.my-3.d-flex.justify-content-center
              button(type='button', onclick='goface();').btn.btn-primary.btn-rounded.mr-md-2.z-depth-1a
                i.fa.fa-facebook.text-center(style={color: '#2196F3'})
              button(type='button', onclick='gogo();').btn.btn-primary.btn-rounded.mr-md-3.z-depth-1a
                i.fa.fa-google.text-center(style={color: '#2196F3'})
              button(type='button', onclick='gotwitter();').btn.btn-primary.btn-rounded.mr-md-3.z-depth-1a
                i.fa.fa-twitter.text-center(style={color: '#2196F3'})

          .modal-footer.mx-5.pt-3.mb-1
            p.font-small.grey-text.d-flex.justify-content-end Pas encore Inscrit?
              a(href='#').blue-text.ml-1 Inscrivez Vous

    .modal.fade(id='inscription', tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
      .modal-dialog.cascading-modal(role='document')
        form.modal-content(method='post', action='/users/register')
          .modal-header.blue-gradient.darken-3.white-text
            h4.title
              | Inscprtion
              button(type='button', data-dismiss='modal', aria-label='Close').close.waves-effect.waves-light
                span(aria-hidden='true') &times;
          .modal-body.form-elegant
            .grid-x.grid-margin-x
              .md-form.small-6.cell
                input(type='text', id='nom', name='nom')
                label(for='nom') Nom
              .md-form.small-6.cell
                input(type='text', id='prenom', name='prenom')
                label(for='prenom') Prenom
            .grid-x.grid-margin-x
              .md-form.small-6.cell
                input(type='text', id='emailRegister', name='emailRegister')
                label(for='emailRegister') Email
              .md-form.small-6.cell
                input(type='password', id='passwordRegister', name='passwordRegister')
                label(for='passwordRegister') Mot De Passe
            .grid-x.grid-margin-x
              .md-form.small-4.cell
                input(type='text', id='tel', name='tel').typeahead
                label(for='tel') Tel
              .md-form.small-4.cell#ville
                input(type='text', id='ville1', placeholder='Ville', name='ville1').typeahead
              .md-form.small-4.cell#quartier
                input(type='text', id='quartier1', placeholder='Quartier', name='quartier1').typeahead
            .text-center.mb-3
              button(type='submit', onclick='test();').btn.blue-gradient.btn-block.btn-rounded.z-depth-1a Inscription
            p.font-small.dark-grey-text.text-right.d-flex.justify-content-center.mb-3.pt-2 or Inscrivez Vous Avec
            .row.my-3.d-flex.justify-content-center
              button(type='button').btn.btn-primary.btn-rounded.mr-md-2.z-depth-1a
                i.fa.fa-facebook.text-center(style={color: '#2196F3'})
              button(type='button').btn.btn-primary.btn-rounded.mr-md-3.z-depth-1a
                i.fa.fa-google.text-center(style={color: '#2196F3'})
              button(type='button').btn.btn-primary.btn-rounded.mr-md-3.z-depth-1a
                i.fa.fa-twitter.text-center(style={color: '#2196F3'})




    block script
      script(type='text/javascript').
          function setType(){
              var checkbox = document.getElementById('type_personne');
              if (checkbox.checked == true) {
                  document.getElementById('typeSelect').value = 'Client';
                  alert('true');
              }
              else {
                  document.getElementById('typeSelect').value = 'Administrateur';
                  alert('false');
              }
              alert(document.getElementById('typeSelect').value);
          }
          function goface(){
              alert('im here');
              document.location = 'http://localhost:3000/users/auth/facebook';
          }

          function gogo() {
              alert('im here');
              document.location = 'http://localhost:3000/users/auth/google';
          }

          function gotwitter() {
              alert('im here');
              document.location = 'http://localhost:3000/users/auth/twitter';
          }
      script(type='text/javascript', src='/javascripts/jquery.js')
      script(type='text/javascript', src='/javascripts/foundation.js')
      script(type='text/javascript', src='/javascripts/app.js')
      script(type='text/javascript', src='/javascripts/popper.min.js')
      script(type='text/javascript', src='/javascripts/bootstrap.min.js')
      script(type='text/javascript', src='/javascripts/compiled.min.js')
      script(type='text/javascript', src='/javascripts/jquery-3.2.1.min.js')
      script(type='text/javascript', src='/javascripts/jquery-1.js')
      script(type='text/javascript', src='/javascripts/handlebars.js')
      script(type='text/javascript', src='/javascripts/examples.js')
      script(type='text/javascript', src='/javascripts/typeahead.js')

